<?xml version="1.0" encoding="utf-8"?>
<Container version="1">
    <TemplateURL>https://raw.githubusercontent.com/CalumD/containers/master/unraid-templates/factorio.xml</TemplateURL>
    <Date>2020-04-23</Date>
    <Beta>False</Beta>
    <Category>GameServers:</Category>
    <Name>Factorio-Server</Name>
    <Project>https://factorio.com/</Project>
    <Changes>
        [center][font size=4]Factorio Headless Server Docker Container Change Log[/font][/center]

        [font size=3]2020.04.23[/font]
        - Creating the Unraid GUI xml template
        - Using default of factorio 0.18.19
    </Changes>
    <Overview>
        A Dockerised version of the Factorio Headless Server.
    </Overview>
    <Description>
        This was to play around with creating my entirely own process around docker on unraid and was inspired from the existing factoriotools/factorio content.
    </Description>
    <Registry>https://hub.docker.com/r/agentclum/factorio</Registry>
    <GitHub>https://github.com/CalumD/containers</GitHub>
    <Repository>agentclum/factorio:latest</Repository>
    <Icon>https://pbs.twimg.com/profile_images/461721746077261824/liyRhb8Q_400x400.png</Icon>
    <BindTime>true</BindTime>
    <Privileged>false</Privileged>
    <Network>host</Network>
    <Shell>bash</Shell>
    <Environment>
        <Variable>
            <Name>GAME_VERSION</Name>
            <Value>0.18.19</Value>
        </Variable>
        <Variable>
            <Name>GAME_PORT</Name>
            <Value>34197</Value>
        </Variable>
    </Environment>
    <Networking>
        <Mode>host</Mode>
        <Publish>
            <Port>
                <HostPort>34197</HostPort>
                <ContainerPort>34197</ContainerPort>
                <Protocol>udp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/factorio</HostDir>
            <ContainerDir>/factorio_files</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
    <Config Name="Game Version" Target="GAME_VERSION" Default="0.18.19" Description="Choose Game Version" Type="Variable" Display="always" Required="true" Mask="false">0.18.19</Config>
    <Config Name="Game Port" Target="GAME_PORT" Default="34197" Description="Choose Port, this should match the Docker port allocation." Type="Variable" Display="always" Required="true" Mask="false">34197</Config>
    <Config Name="Server Data" Target="/factorio_files" Default="/mnt/user/appdata/factorio" Mode="rw" Description="Appdata for factorio server" Type="Path" Display="advanced" Required="true" Mask="false">/mnt/user/appdata/factorio</Config>
</Container>
